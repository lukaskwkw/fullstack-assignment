{
  "name": "assignment",
  "version": "1.0.0",
  "description": "Assignment – Full Stack Developer",
  "main": "src/index.jsx",
  "scripts": {
    "start": "ts-node ./src/server/server.ts",
    "build-and-start": "npm run build-client && npm run start",
    "build-client": "cross-env NODE_ENV=production webpack --config ./webpack.client.js --mode production",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "webpack-dev-server --config ./webpack.client.js --mode development",
    "dev:server": "cross-env NODE_ENV=development nodemon",
    "test": "riteway -r @babel/register -r @babel/polyfill -r ts-node/register \"src/**/*.test.ts\"",
    "format": "prettier --write \"**/*.{js,jsx,tsx,css,scss,md}\""
  },
  "author": "Łukasz Kwiecień",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "@testing-library/react-hooks": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "css-loader": "^3.2.0",
    "eslint": "^6.3.0",
    "eslint-plugin-react": "^7.14.3",
    "fetch-mock": "^7.3.9",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "mini-css-extract-plugin": "^0.8.0",
    "node-fetch": "^2.6.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.2",
    "npm-link-shared": "^0.5.6",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.9.0",
    "riteway": "^6.1.0",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "terser-webpack-plugin": "^1.4.1",
    "ts-loader": "^6.0.4",
    "typescript": "3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.3.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "ts-node": "^8.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,jsx,tsx}": [
      "stylelint --fix --config stylelint.config.js",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --fix --config stylelint.config.js",
      "git add"
    ],
    "*.{js,jsx,tsx,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
